<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recipe_item_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/covered_plate" />

    <TextView
        android:id="@+id/recipe_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/recipe_item_image"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Everyday Baked Chicken"
        android:gravity="start"
        style="@style/RecipeTitleText" />

</RelativeLayout>